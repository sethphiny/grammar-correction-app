{
  "name": "grammar-correction-app",
  "version": "1.0.0",
  "description": "Grammar Correction Desktop Application",
  "main": "main.js",
  "author": "Grammar Correction Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:win": "electron-builder --win portable",
    "build:win:installer": "electron-builder --win nsis",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.grammarcorrection.app",
    "productName": "Grammar Correction App",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Grammar Correction App"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "sethphiny",
      "repo": "grammar-correction-app",
      "releaseType": "release"
    }
  }
}

