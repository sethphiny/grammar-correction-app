# Backend Configuration
LANGUAGETOOL_URL=http://localhost:8081
MAX_FILE_SIZE=10485760
PROCESSING_TIMEOUT=300
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (if needed for future features)
DATABASE_URL=sqlite:///./grammar_app.db

# ============================================================
# LLM Enhancement (AI-Powered Grammar Corrections)
# ============================================================
# See docs/API_KEYS_SETUP_GUIDE.md for detailed setup instructions

# Enable/Disable LLM Enhancement
LLM_ENHANCEMENT_ENABLED=false

# Provider Selection (openai, google, anthropic)
LLM_PROVIDER=openai

# Model Selection
LLM_MODEL=gpt-4o-mini

# API Keys (get from provider dashboard)
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# Google Gemini (optional, for budget option)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIza-your-key-here

# Anthropic Claude (optional, for premium option)
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Cost Control
LLM_MAX_COST_PER_DOCUMENT=0.50
DAILY_LLM_COST_LIMIT=100.0
MONTHLY_LLM_COST_LIMIT=1000.0

# Alerts
COST_ALERT_EMAIL=admin@yourdomain.com
COST_ALERT_THRESHOLD_PERCENTAGE=80

# Redis Cache (optional, for cost optimization)
# REDIS_URL=redis://localhost:6379
